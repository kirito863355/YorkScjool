@model YorkScjool.Models.ApplicationUser

@{
    ViewBag.Title = "Edit Student";
}

<h2 class="text-center mb-4">Edit Student</h2>

<div class="container">
    @using (Html.BeginForm("EditStudent", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", required = "required" })
        </div>

        <button type="submit" class="btn btn-success mt-3">Save Changes</button>
        <a href="@Url.Action("ManageStudents", "Admin")" class="btn btn-secondary mt-3">Cancel</a>
    }
</div>
