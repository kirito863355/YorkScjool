@{ ViewBag.Title = "Admin Management"; }

<h2>Admin Panel</h2>

<div class="admin-sections">
    <div class="section">
        <h3>Manage Users</h3>
        <ul>
            <li><a href="@Url.Action("ManageUsers", "Admin")">Edit / Delete Users</a></li>
            <li><a href="@Url.Action("RegisterUser", "Admin")">Register New User</a></li>
        </ul>
    </div>

    <div class="section">
        <h3>Manage Courses</h3>
        <ul>
            <li><a href="@Url.Action("ManageCourses", "Admin")">View / Edit / Delete Courses</a></li>
            <li><a href="@Url.Action("AddCourse", "Admin")">Add New Course</a></li>
        </ul>
    </div>

    <div class="section">
        <h3>Manage Lessons</h3>
        <ul>
            <li><a href="@Url.Action("ManageLessons", "Admin")">View / Edit / Delete Lessons</a></li>
            <li><a href="@Url.Action("AddLesson", "Admin")">Add New Lesson</a></li>
        </ul>
    </div>

    <div class="section">
        <h3>Manage Homework</h3>
        <ul>
            <li><a href="@Url.Action("ManageHomework", "Admin")">View / Edit / Delete Homework</a></li>
            <li><a href="@Url.Action("AddHomework", "Admin")">Assign New Homework</a></li>
        </ul>
    </div>
</div>

<style>
    .admin-sections {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .section {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        width: 250px;
        box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
    }

        .section h3 {
            margin-bottom: 10px;
        }

        .section ul {
            list-style: none;
            padding: 0;
        }

        .section li {
            margin: 5px 0;
        }

        .section a {
            text-decoration: none;
            color: #007bff;
        }
</style>
