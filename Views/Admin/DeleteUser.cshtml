@model YorkScjool.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}

<h2>Delete User</h2>
<p>Are you sure you want to delete this user?</p>

<div>
    <strong>Username:</strong> @Model.UserName <br />
    <strong>Email:</strong> @Model.Email
</div>

@using (Html.BeginForm("ConfirmDeleteUser", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "ManageUsers", null, new { @class = "btn btn-secondary" })
}
