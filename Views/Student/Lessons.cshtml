                        let attempts = 3;

                        function checkAnswer() {
                            let userInput = document.getElementById("inputBox").value.trim().toLowerCase();
                            let correctAnswer = "mustache"; // Change this as needed

                            if (userInput === correctAnswer) {
                                document.getElementById("message").innerText = "✅ Correct! Well done!";
                                document.getElementById("checkBtn").disabled = true; // Disable check button
                            } else {
                                attempts--;
                                document.getElementById("attemptsLeft").innerText = `Attempts left: ${attempts}`;

                                if (attempts === 0) {
                                    document.getElementById("message").innerText = "❌ Game Over! The correct word was 'mustache'.";
                                    document.getElementById("checkBtn").disabled = true;
                                } else {
                                    document.getElementById("message").innerText = "❌ Incorrect! Try again.";
                                }
                            }
                        }

                        function checkWord() {
                            if (selectedWord === correctWord) {
                                document.getElementById("result").textContent = "✅ Correct!";
                                document.getElementById("result").style.color = "green";
                            } else {
                                attempts--;
                                document.getElementById("result").textContent = "❌ Try Again!";
                                document.getElementById("result").style.color = "red";
                            }
                        }

                        function selectLetter(letterElement) {
                            // Add the letter to the answer box
                            const letter = letterElement.textContent;
                            const answerBox = document.getElementById("answer");

                            let span = document.createElement("span");
                            span.classList.add("answer-box");
                            span.textContent = letter;
                            answerBox.appendChild(span);

                            // Remove the letter from selection
                            letterElement.style.visibility = "hidden";

                            // Update selected word
                            selectedWord += letter;
                        }


                        function resetGame() {
                            document.getElementById("answer").innerHTML = "";
                            document.getElementById("result").textContent = "";
                            selectedWord = "";

                            // Reset letter visibility
                            document.querySelectorAll(".letter-box").forEach(letter => {
                                letter.style.visibility = "visible";
                            });
