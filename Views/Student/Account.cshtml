@model YorkScjool.Models.Student

@{
    ViewBag.Title = "Student Account";
}

<div class="row gutters-sm">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img src="@Model.ProfilePicture" alt="Profile Picture" class="rounded-circle" width="150">
                    }
                    <div class="mt-3">
                        <h4>@Model.FullName</h4>
                        <p class="text-muted font-size-sm">@Model.Country</p>
                        <p class="text-muted font-size-sm">@Model.Email</p>
                        <p class="text-muted font-size-sm">@Model.Mobile</p>
                        <p class="text-muted font-size-sm" @Model.Country</p>
                        <div class="card mt-3">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0">
