@model YorkScjool.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "";
}

<style>

footer{
    display: none;
}


body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;

    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    color: #fff;
}

/* Login Container */
.login-container {
    width: 100%;
    max-width: 400px;
    padding: 20px;
    border-radius: 10px;
    color: #353b4e;
}

/* Form */
.login-form h2 {
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: weight;
    font-style: normal;
    text-align: center;
    margin-bottom: 20px;
    font-size: 40px;
}

.input-group {
    margin-bottom: 15px;
}

.input-group p{
    color: grey;
    font-size: 17px;
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: weight;
    font-style: normal;
    text-align: center;
   text-align: center;
}

.hr1{
    color: rgb(165, 165, 165);
}

.recovery{
    font-size: 40px;
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: weight;
    font-style: normal;
    text-align: center;
   text-align: center;
}

.input-group label {
    display: block;
    font-size: 14px;
    margin-bottom: 5px;
}

.input-group input {
    width: 91.5%;
    padding: 15px;
    font-size: 20px;
    border: 2px solid #ccc;
    border-radius: 10px;
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: weight;
    font-style: normal;
}

.input-group input:focus {
    border-color: #ef6603;
    outline: none;
}

/* Login Button */
.login-btn {
    width: 100%;
    padding: 15px;
    background-color: #ef6603;
    color: #fff;
    border: none;
    border-radius: 10px;
    font-size: 20px;
    cursor: pointer;
    transition: background-color 0.3s;
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: 600;
    font-style: normal;

}

.login-btn:hover {
    background-color: #ef6603;
}

/* Signup Text */
.signup-text {
    text-align: center;
    margin-top: 10px;
    font-size: 17px;
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: weight;
    font-style: normal;
    color: grey;

}

.signup-text a {
    color: grey;
    text-decoration: none;
}

.signup-text a:hover {
    text-decoration: none;
    color: #ef6603;
}

</style>

<main aria-labelledby="title" class="login-container">
    <div class="login-form">
        <h2 id="title">@ViewBag.Title</h2>
        <h3 class="recovery">Password Recovery</h3>
        <p>Enter the email you're using for your account.</p>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="input-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
                </div>
            </div>

            <button type="submit" class="login-btn">Email Link</button>
        }

        <p class="signup-text">
            <a href="@Url.Action("Login", "Account")">Return to Log in</a>
        </p>
    </div>
</main>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
