@model List<YorkScjool.Models.ApplicationUser>

@{
    ViewBag.Title = "Manage Students";
}

<h2 class="text-center mb-4">Manage Students</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">
        No students found.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Student ID</th>
                <th>Name</th>
                <th>Email</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{ int index = 1; }
            @foreach (var student in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@student.Id</td>
                    <td>@student.UserName</td>
                    <td>@student.Email</td>
                    <td class="text-center">
                        <a href="@Url.Action("EditStudent", "Admin", new { id = student.Id })" class="btn btn-primary btn-sm">Edit</a>
                        <a href="@Url.Action("DeleteStudent", "Admin", new { id = student.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this student?');">
                            Delete
                        </a>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
}
